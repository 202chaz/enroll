#home {
  nav {
    ul {
      background-color: #007bc4;
      padding: 20px 0;
      list-style-type: none;
      img {
        width:100%
      }
      li {
        padding: 8px 0;
        &.active {
          a {
            color: #ffffff;
            border-left: solid 4px #cbe6ff;
          }
        }
        a {
          color: #cbe6ff;
          text-align: left;
          padding-left: 15px;
          font-weight: 600;
          font-size: 18px;
          display: inline-block;
          width: 100%;
          &:hover {
            background-color: transparent;
          }
        }
        span {
          background-color: #e72b2d;
        }
      }
    }
  }
  .employees-tab {
    .col-xs-12 {
      &:first-of-type {
        margin-bottom: 25px;
      }
    }
    #census_employee_search {
      margin-top: 12px;
    }
    .employees-table {
      table {
        width: 100%;
        background-color: #ffffff;
        border: solid 1px #d5d5d5;
        table-layout: fixed
      }
      th {
        padding: 12px 0;
        font-weight: normal;
        text-align: center;
      }
    }
  }
  .home-tab, .employees-tab {
    h1 {
      margin-top: 0;
      &+.panel {
        border-radius: 0;
        ul {
           list-style: square;
           font-size: 14px;
           li {
             color: #007bc4;
             margin-left: 17px;
             margin-bottom: 5px;
             &:last-of-type {
               margin-bottom: 0;
             }
             span {
               color: #8a6d3b;
               display: inline-block;
             }
             a {
               color: #007bc4;
             }
           }
         }
        &.alert {
          padding: 0;
        }
        &.panel-default {
          &>.panel-heading {
            border-radius: 0;
            background-image: none;
            background-color: #007bc4;
            border-bottom: none;
            padding: 0 20px;
            font-size: 14px;
            text-transform: uppercase;
            color: #ffffff;
            margin: 0;
            padding: 0 15px;
          }
        }
      }
    }
    .panel {
      border-radius: 0;
      border: solid 1px #d5d5d5;
      &.alert {
        padding: 0;
      }
      &.panel-default {
        &>.panel-heading {
          border-radius: 0;
          background-image: none;
          background-color: #ffffff;
          border-bottom: none;
          padding: 15px 15px 0px;
          margin: 0;
          border-bottom: solid 1px #d5d5d5;
          h3 {
            font-size: 18px;
            padding: 0;
            margin-top: 0;
            i {
              color: #007bc4;
            }
          }
          .progress {
            height: 8px;
            border: solid 1px #d5d5d5;
            border-radius: 0;
            margin-bottom: 12px;
            &+.information {
              padding-bottom: 15px;
            }
          }
        }
        .panel-body {
          i {
            &:first-of-type {
              margin-right: 10px;
            }
          }
        }
      }
    }

  }
}
