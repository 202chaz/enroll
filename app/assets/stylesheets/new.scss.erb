#home {
  nav {
    ul {
      margin: 25px 0 21px;
      background-color: #007bc4;
      padding: 0;
      list-style-type: none;
      img {
        width:100%
      }
      li {
        padding: 8px 0;
        &.active {
          a {
            color: #ffffff;
            border-left: solid 4px #cbe6ff;
          }
        }
        a {
          color: #cbe6ff;
          text-align: center;
          font-weight: Semibold;
          font-size: 18px;
          display: inline-block;
          width: 100%;
          &:hover {
            background-color: transparent;
          }
        }
        span {
          background-color: #e72b2d;
        }
      }
    }
  }  
}
