.clear {
  clear: both;
}
 .starter {
   max-width: 660px;
 }
 .pz {
   padding: 0;
 }
 .btn {
   &.btn-trans {
     border: solid 1px #b2b2b2;
     font-weight: bold;
     font-size: 16px;
     color: #007bc4;
     border-radius: 4px;
     padding: 10px 20px;
     &:hover {
       background-color: #ffffff;
       border: solid 1px #007bc4;
     }
   }
   &.btn-right {
     padding-right: 0;
     margin-left: 5px;
   }
   &.btn-primary {
       text-transform: uppercase;
       padding: 10px 20px;
       border-radius: 6px;
       font-size: 16px;
       letter-spacing: 1px;
       border-top: none;
       border-left: none;
       border-right: none;
       margin-top: 5px;
       margin-right: 5px;
       &.mz {
         margin: 0;
       }
       &.mtz {
         margin-top: 0;
       }

     .fa {
       color: #fff;
     }

   }
 }
 .content-bottom {
   padding-bottom: 45px;
 }
 .col-xs-12.ccs {
   border-right: none;
   padding-right: 0;
 }
 .ccs {
   padding-top: 13px;
   height: 70px;
   border-right: solid 1px #ddd;
   text-align: right;
   &+.col-xs-7 {
     padding: 10px 0 0;
     .top-menu {
       text-align: right;
       position: relative;
       li {
         padding: 0;
         .dark-grey {
           color: #5C5C5C;
           font-weight: 400;
           font-size: 12px;
           position: relative;
           top: -1px;
           display: inline-block;
           padding-right: 3px;
         }
       }
       h4 {
         font-size: 16px;
       }
     }
   }

 }
 #navbar {
   >.col-xs-6 {
     height: 70px;
   }

   .g14 {
     text-transform: uppercase;
     color: #b7b7b7;
     font-size: 12px;
     font-weight: 600;
     letter-spacing: .7;
   }
   h4 {
     font-weight: bold;
     color: #5C5C5C;
     padding: 0;
     margin: 0;
     display: inline-block;
   }
   .fa-phone {
     color: #007bc4;

   }

 }
 .navbar-header {
   padding-left: 0;
   .navbar-brand {

     img {
      display: block;
      max-width: 171px;
      width: 100%;
    }
   }
 }


 .navbar-left {
   padding-right: 0;
 }

 h4.emphasize {
   font-weight: 900;
 }
