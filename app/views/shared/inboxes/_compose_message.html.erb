<div class="col-md-6 col-md-offset-3">
  <h2>New Message</h2>
  Recipient: <b><%= @inbox_provider_name %></b> <br><br>
  <%= f.text_field :subject, class: "floatlabel form-control interaction-control-inbox-message-subject", required: true, placeholder: 'SUBJECT*' %> <br><br>
  <%= f.text_area :body, class: "floatlabel form-control interaction-control-inbox-mesage-body", required: true, placeholder: 'CONTENT*', rows: 10 %> <br>
  <%= f.hidden_field :sender_id, value: current_user.id %>
  <%= f.submit 'Send', class: "btn btn-primary interaction-control-inbox-send" %>
  <a class="btn btn-danger" href="#"><i class="fa fa-times interaction-control-inbox-cancel"></i> Cancel</a>
</div>
