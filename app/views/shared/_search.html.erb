<%= form_tag url, { method: :get, class: "form form-inline", role: "search", style: "margin: 0;"} do %>
  <div class="input-group">
      <%= label_tag :q, "Search term", {class: "sr-only"} %>
      <%= text_field_tag :q, q, {placeholder: placeholder, class: "form-control", style: "padding: 12px 15px; border: 1px solid #ccc; height: 43px;"} %>
      <span class="input-group-btn">
          <button class="btn btn-default" type="submit">
              <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
          </button>
      </span>
  </div>
<% end %>
