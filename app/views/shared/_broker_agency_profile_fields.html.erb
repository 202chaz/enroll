<div class="row no-buffer focus_effect personal-info-row">
  <div class="col-md-12 no-pd col-sm-12 col-xs-12 first">
    <div class="col-md-3 col-sm-3 col-xs-12 form-group-lg no-pd">
      <%= f.select(:market_kind, options_for_select(BrokerAgencyProfile::MARKET_KINDS.map {|k| [k.to_s.titleize, k.to_s]}), { prompt: "Select Practice Area"}, { :class => ''} ) %>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-12 form-group-lg no-pd">
      <%= f.text_field :languages_spoken, class: "floatlabel form-control", required: true, placeholder: 'LANGUAGES SPOKEN' %>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
      <div class="checkbox">
        <label>
          <%= f.check_box :working_hours %> EVENING/WEEKEND HOURS?
        </label>
      </div>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
      <div class="checkbox">
        <label>
          <%= f.check_box :accept_new_clients %> ACCEPT NEW CLIENTS?
        </label>
      </div>
    </div>
  </div>
</div>