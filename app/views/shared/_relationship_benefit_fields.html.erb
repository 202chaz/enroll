<fieldset>
<div class="row no-buffer focus_effect personal-info-row">
  <div class="col-md-12 no-pd first">
    <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
      <%= f.select :relationship, options_for_select(BenefitGroup::PERSONAL_RELATIONSHIP_KINDS.map{|r| [r.to_s.titleize, r.to_s] }), class: "floatlabel form-control", required: true, placeholder: 'RELATIONSHIP' %>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
      <%= f.text_field :premium_pct, class: "floatlabel form-control", required: true, placeholder: 'PREMIUM PERCENTAGE' %>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
      <%= f.text_field :employer_max_amt, class: "floatlabel form-control", required: true, placeholder: 'EMPLOYER MAX AMOUNT' %>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
      <%= f.text_field :offered, class: "floatlabel form-control", required: true, placeholder: 'OFFERED (TRUE/FALSE)' %>
    </div>
  </div>
</div>
</fieldset>

<script>
  $(function(){
    $('select').selectric();
  });
</script>