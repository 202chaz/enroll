<h3>Personal Information</h3>
<div id="personal_info" class="focus_effect">
  <%= hidden_field "people","id" %>

  <div class="row row-form-wrapper no-buffer">
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
      <%= f.text_field :first_name, class: "required floatlabel form-control", required: true, placeholder: 'FIRST NAME' %>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
      <%= f.text_field :middle_name, class: "floatlabel form-control", placeholder: 'MIDDLE NAME' %>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
      <%= f.text_field :last_name, class: "required floatlabel form-control", required: true, placeholder: 'LAST NAME' %>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
      <%= f.text_field :name_sfx, class: "floatlabel form-control", placeholder: 'SUFFIX' %>
    </div>
  </div>

  <div class="row row-form-wrapper no-buffer">
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
      <%= f.text_field :date_of_birth, start_year: Date.today.year - 110, end_year: Date.today.year, placeholder: "BIRTHDATE",
        class: "required date-picker dob-picker floatlabel form-control", required: true %>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
      <%= f.text_field :ssn, placeholder: "SOCIAL SECURITY", class: "required floatlabel form-control", required: true %>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6 form-group form-group-lg no-pd">
      <div class="radio">
        <%= f.radio_button :gender, "male", checked: true, class: "required floatlabel", id: 'radio_male' %>
        <label for="radio_male"><span>MALE</span></label>
      </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6 form-group form-group-lg no-pd">
      <div class="radio">
        <%= f.radio_button :gender, "female", class: "required floatlabel", id: 'radio_female'  %>
        <label for="radio_female"><span>FEMALE</span></label>
      </div>
    </div>
  </div>
</div>
