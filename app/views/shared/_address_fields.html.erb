<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-8">
    <div class="form-group required">
      <%= select_dropdown "person_address_kind", Address::KINDS %>
    </div>
  </div>
  <div class="col-xs-12 col-sm-3 col-md-3">
    <div class="form-group">
      <%= link_to '<span class="fa fa-plus-square"> Add Address</span>'.html_safe, '#', :class => "btn btn-primary remove_fields text-danger" %>
      <%= f.hidden_field :_destroy %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-6">
    <div class="form-group required">
      <%= f.text_field :address_1, placeholder: 'Address1', class: "form-control", required: true %>
    </div>
  </div>

  <div class="col-xs-12 col-sm-6 col-md-6">
    <div class="form-group">
      <%= f.text_field :address_2, placeholder: 'Address2', class: "form-control" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-5 col-md-5">
    <div class="form-group required">
      <%= f.text_field :city, placeholder: "City", class: "form-control", required: true %>
    </div>
  </div>

  <div class="col-xs-12 col-sm-4 col-md-4">
    <div class="form-group required">
      <%= select_dropdown "person_address_state", State::NAME_IDS %>
    </div>
  </div>

  <div class="col-xs-12 col-sm-3 col-md-3">
    <div class="form-group required">
      <%= f.text_field :zip, placeholder: "Zip", class: "form-control", required: true %>
    </div>
  </div>
</div>