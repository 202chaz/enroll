<fieldset>
  <div class="row">
    <div class="col-xs-6 col-sm-3 col-md-2">
      <div class="form-group">
        <%= f.label :kind %>
        <%= select_dropdown "employee_phone_kind", Phone::KINDS %>
      </div>
    </div>
    <div class="col-xs-6 col-sm-4 col-md-5">
      <div class="form-group">
        <%= f.label :number, "Phone Number" %>
        <%= f.text_field :number, class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-6 col-sm-2 col-md-2">
      <div class="form-group">
        <%= f.label :extension %>
        <%= f.text_field :extension, class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-6 col-sm-3 col-md-3">
      <div class="form-group">
        <%= link_to '<span class="fa fa-minus-square"> Delete Phone</span>'.html_safe, '#', :class => "remove_fields text-danger" %>
        <%= f.hidden_field :_destroy %>
      </div>
    </div>
  </div>
</fieldset>
