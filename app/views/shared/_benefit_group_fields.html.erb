<fieldset>
  <div style="height:50px;position:relative;">
    <%= link_to '#', :class => "remove_fields close-2" do %>
      <%= image_tag("delete.png") %>
    <% end %> 
  </div>
  <div class="row no-buffer focus_effect personal-info-row">
    <div class="col-md-12 no-pd first">
      <div class="row top-row">
        <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
          <%= f.text_field :title, class: "floatlabel form-control", required: true, placeholder: 'TITLE' %>
        </div>
        <!-- Select Plan:  -->
        <%= render "shared/reference_plans_list", f: f  %>

      </div>
      <div class="row bottom-row">
        <div class="col-md-4 col-sm-4 col-xs-12 form-group form-group-lg no-pd">
          <!-- Offset :  -->
          <%= f.select(:effective_on_offset, options_for_select([["0 (Zero)", 0], ["30 (Thirty)", 30], ["60 (Sixty)", 60]], selected: 0), {:include_blank => "Select Effective On Offset"}, { :class => ''}) %>

          <!-- <label class="control-label"> EFFECTIVE ON OFFSET: </label>
          <div class="btn-group" data-toggle="buttons">
            <label class="btn btn-primary active"> <%#= f.radio_button :effective_on_offset, 0 %> 0 (Zero) </label>
            <label class="btn btn-primary"> <%#= f.radio_button :effective_on_offset, 30 %> 30 (Thirty) </label>
            <label class="btn btn-primary"> <%#= f.radio_button :effective_on_offset, 60 %> 60 (Sixty) </label>
          </div> -->
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group form-group-lg no-pd">
          <%= f.text_field :premium_pct_as_int, class: "floatlabel form-control", required: true, placeholder: 'PREMIUM PERCENTAGE (>=50)' %>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group form-group-lg no-pd">
          <%= f.text_field :employer_max_amt_in_cents, class: "floatlabel form-control", required: true, placeholder: 'EMPLOYER MAXIMUM CONTRIBUTION' %>
        </div>
      </div>
    </div>
  </div>

  <h4> Relationship Benefits</h4>
  <div class='form-inputs'>
    <%= f.fields_for :relationship_benefits, errors: {}, fieldset: false do |rb|  %>
      <%= render "shared/relationship_benefit_fields", f: rb %><br>
    <% end %>

    <div>
      <%= link_to_add_fields "Add Relationship Benefit", f, :relationship_benefits, 'pull-right btn btn-success' %>
    </div>
  </div><br>
</fieldset>
<div class="clear"></div>
<script>
  $(function(){
    $('select').selectric();
	  $('.carrier').on('change', function() {
      var target = $(this).parents(".form-group");
	  	var txt = $(this).val();
      $(target).find(".carrier-select .selectric-wrapper").hide();
      $(target).find(".carrier-select .selectric-carrier-" + txt).show();
	  });
  });
</script>
