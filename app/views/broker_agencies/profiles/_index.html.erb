<div class="" id="inbox_provider_form">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <h3 class="title-inline">Broker Agencies</h3>
      <div class="form-inline button-group-wrapper">
        <div class="col-xs-12 search-wp">
          <form class="form form-inline input-no-pd" role="search" style="margin: 0;" action="/exchanges/hbx_profiles/broker_agency_index_search" accept-charset="UTF-8" data-remote="true" method="post"><input name="utf8" type="hidden" value="âœ“">
            <div class="input-group">
              <label class="sr-only" for="q">Search term</label>
              <input type="text" id="search" placeholder="Name" class="form-control">
                <span class="input-group-btn ">
                  <a class="btn btn-default search_icon" href="#?">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                  </a>
                </span>
            </div>
          </form>
        </div>
<!--       <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 no-pd">
      </div> -->
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="table-border table-responsive">
      <table class="table">
        <% if @broker_agency_profiles.present? %>
          <thead>
            <th>Legal Name</th>
            <th>dba</th>
            <th>Fein</th>
            <th>Entity Kind</th>
            <th>Market Kind</th>
            <th></th>
          </thead>
      <% @broker_agency_profiles.each do |broker_agency_profile| %>
        <tbody>
          <td><%= link_to broker_agency_profile.legal_name, broker_agencies_profile_path(broker_agency_profile) %></td>
          <td><%= broker_agency_profile.dba %></td>
          <td><%= broker_agency_profile.fein %></td>
          <td><%= broker_agency_profile.entity_kind.titleize %></td>
          <td><%= broker_agency_profile.market_kind.titleize %></td>
            <td>
              
              <%= link_to 'Send Secure Message'.html_safe,
            new_broker_agencies_inbox_path(id: broker_agency_profile.id, profile_id: @profile._id), class: "btn btn-default" + pundit_class(HbxProfile, :modify_admin_tabs?), remote: true %>
            </td>
        </tbody>
      <% end %>
    <% else %>
      <tr><td>No Broker Agency Profiles found.</td></tr>
    <% end %>
    </table>
  </div>
 </div>
</div>
</div>

<script type="text/javascript">
 
$('#search').keypress(function (e) { 
    var key = e.which; 
    if(key == 13) // the enter key code 
    { 
$('.search_icon').click(); 
return false; 
} 
});
$(".search_icon").click(function(){
    
    $.ajax({
      url:'/exchanges/hbx_profiles/broker_agency_index_search',
      type:'post',
      data:'search='+$("#search").val(),
      success:function(data){
        $(".table-responsive").html(data);
      }
    })
  })
</script>

