<div class="container">
	<div class="row">
		<div class="col-md-9 col-sm-9 col-xs-12">
			<h4>Personal Information</h4>
			<div class="row no-buffer row-form-wrapper">
                                                <%= hidden_field :email, value: current_user.email %>
						<div class="col-md-4 col-sm-4 col-xs-12 form-group-lg no-pd">
							<%= f.text_field :first_name, class: "floatlabel form-control", placeholder: 'FIRST NAME' %>
						</div>
						<div class="col-md-4 col-sm-4 col-xs-12 form-group-lg no-pd">
							<%= f.text_field :last_name, class: "floatlabel form-control", placeholder: 'LAST NAME' %>
						</div>
						<div class="col-md-4 col-sm-4 col-xs-12 form-group-lg no-pd">
							<%= datepicker_control f, :dob, {:class => "floatlabel form-control", :placeholder => "DATE OF BIRTH"} %>
						</div>
			</div>
		</div>
		<br>
		<div class="col-md-9 col-sm-9 col-xs-12">
			<h4>Broker Agency Information</h4>
			<%= f.fields_for :broker_agency_profile do |broker_agency_profile| %>
						<div class="row no-buffer row-form-wrapper">
							<%= render "shared/organizations/entity_name_and_type_fields", f: broker_agency_profile %>
						</div>
						<div class="row no-buffer row-form-wrapper">
							<div class="col-md-4 col-sm-4 col-xs-12 form-group form-group-lg no-pd">
								<%= broker_agency_profile.text_field :home_page, class: "floatlabel form-control", placeholder: 'WEBSITE URL' %>
							</div>
						</div>
						<div class="row no-buffer row-form-wrapper">
							<%= render "shared/broker_agency_profile_fields", f: broker_agency_profile %>
						</div>
			<% end %>
			<%= render "shared/organizations/office_location_fields", f: f %>


			<div class="row">
				<button type="submit" class="btn btn-primary"><i class="fa fa-user-plus"></i> Create Broker Agency</button>
			</div>
		</div>
	</div>
</div>
