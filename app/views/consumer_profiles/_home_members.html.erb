<div class="row">
	<p class="head">
	<span>Family Members</span>
	<span><%= link_to "add family members", family_consumer_profiles_path, :remote => true %></span>
	</p>
	<ul class="list-group emp-ul">
		<% primary_member = @family.primary_applicant %>
		<% other_members = @family.active_family_members.reject { |fm| fm.id.to_s == primary_member.id.to_s } %>
		<% ([primary_member] + other_members).each do |fm| %>
			<li class="list-group-item">
			<div class="row">
				<div class="col-md-12 col-sm-12 col-xs-12">
					<h4>
						<%= 
							fm.person.first_name %> <%= fm.person.middle_name %> <%= fm.person.last_name

							link_to family_consumer_profiles_path, remote: true, class: 'pull-right' do
								'<i class="fa fa-pencil"></i>'.html_safe
							end
						%>
					</h4>
				</div>
			</div>
			</li>
		<% end %>
	</ul>
</div>
