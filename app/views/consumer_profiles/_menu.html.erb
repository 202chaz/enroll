<div class="mainmenu">
  <div class="container">
    <ul role="tablist" class="list-unstyled list-inline" id="myTab">

      <li role="presentation"<%= menu_tab_class(active_tab, "home-tab") %>>
        <%= link_to(home_consumer_profiles_path, :remote => true, class: 'hidden-xs', "aria-expanded" => "true", "aria-controls" => "home", "role" => "tab" ) do  %>
          <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        <% end %>

        <%= link_to(home_consumer_profiles_path, :remote => true, class: 'visible-xs', "aria-expanded" => "true", "aria-controls" => "home", "role" => "tab" ) do  %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
              <small>Home</small>
          <% end %>
      </li>

      <li role="presentation"<%= menu_tab_class(active_tab, "profile-tab") %>>
          <%= link_to(personal_consumer_profiles_path, :remote => true, class: 'hidden-xs', "aria-expanded" => "true", "aria-controls" => "profile", "role" => "tab" ) do  %>
            Profile
          <% end %>

          <%= link_to(personal_consumer_profiles_path, :remote => true, class: 'visible-xs', "aria-expanded" => "true", "aria-controls" => "profile", "role" => "tab" ) do  %>
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            <small>Profile</small>
          <% end %>
      </li>

      <li role="presentation"<%= menu_tab_class(active_tab, "plans-tab") %>>
        <%= link_to(plans_consumer_profiles_path, :remote => true, class: 'hidden-xs', "aria-expanded" => "true", "aria-controls" => "plans", "role" => "tab" ) do  %>
          Plans
        <% end %>

        <%= link_to(plans_consumer_profiles_path, :remote => true, class: 'visible-xs', "aria-expanded" => "true", "aria-controls" => "plans", "role" => "tab" ) do  %>
          <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
          <small>Plans</small>
        <% end %>
      </li>

      <% if @person.try(:consumer_role).present? %>
        <li role="presentation"<%= menu_tab_class(active_tab, "documents-tab") %>>
          <%= link_to(documents_consumer_profiles_path, :remote => true, class: 'hidden-xs', "aria-expanded" => "true", "aria-controls" => "documents", "role" => "tab" ) do  %>
            Documents
          <% end %>

          <%= link_to(documents_consumer_profiles_path, :remote => true, class: 'visible-xs', "aria-expanded" => "true", "aria-controls" => "documents", "role" => "tab" ) do  %>
              <span class="glyphicon glyphicon-duplicate" aria-hidden="true"></span>
              <small>Documents</small>
          <% end %>
        </li>
      <% end%>

      <li role="presentation"<%= menu_tab_class(active_tab, "messages-tab") %>>
        <%= link_to(inbox_consumer_profiles_path, :remote => true, class: 'hidden-xs', "aria-expanded" => "true", "aria-controls" => "inbox", "role" => "tab" ) do  %>
          <span class="badge message-unread"><%= @person.inbox.unread_messages.try(:count) %></span>
          Inbox
        <% end %>

        <a href="#" class="visible-xs">
          <%= link_to(inbox_consumer_profiles_path, :remote => true, class: 'visible-xs', "aria-expanded" => "true", "aria-controls" => "inbox", "role" => "tab" ) do  %>
          <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
          <small>Inbox</small>
        <% end %>
      </li>
      <li role="presentation">
        <a  id="override-tab">
          <span class="visible-xs">
            <span class="glyphicon glyphicon-duplicate" title="Override Backlink"></span>
            <small> <%=override_backlink%></small>
          </span>

        </a>
      </li>
    </ul>
  </div>
</div>
