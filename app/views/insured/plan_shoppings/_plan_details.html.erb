<!-- Plan first row start -->
<div class="plan-row"
	data-plan-category="<%= plan.plan_type ? plan.plan_type.downcase : "" %>"
  data-plan-metal-level="<%= plan.metal_level.downcase %>"
  data-plan-metal-network="<%= plan.nationwide ? "nationwide" : "dc area network" %>"
  data-plan-metal-premium="<%= plan.total_premium %>"
  data-plan-metal-deductible="<%= plan.deductible %>">
  <div class="row">
    <div class="col-md-6 col-sm-9 col-xs-12">
      <h3><%= plan.name %></h3>
      <p><%= (Caches::MongoidCache.lookup(CarrierProfile, plan.carrier_profile_id) { plan.carrier_profile} ).dba %></p>
    </div>
    <div class="col-md-2 col-sm-2 col-xs-6">
      <p><%= number_to_currency(plan.total_premium) %></p>
      <p>premium</p>
    </div>
    <div class="col-md-2 col-sm-2 col-xs-6">
      <p><%= number_to_currency(plan.total_employer_contribution) %></p><p>employer</p>
    </div>
    <div class="col-md-2 col-sm-2 col-xs-6">
      <h3 class="your_cost pull-right"><%= number_to_currency(plan.total_employee_cost) %></h3>
      <p><strong>your cost</strong></p>
    </div>
  </div><!-- Plan first row end -->

  <!-- Plan details row start -->
  <div class="row plan-details">
    <ul>
      <li>
        <p>Type</p>
        <strong><%= plan.plan_type ? plan.plan_type.upcase : ""%></strong>
      </li>

      <% plan_level = plan.metal_level.humanize %>
      <li class="<%= plan_level.downcase %>">
        <p>Level</p>
        <strong>
          <i class="fa fa-circle-o"></i><%= plan_level %>
        </strong>
      </li>
      <li>
        <p>Network</p>
        <strong><%= plan.nationwide ? "Nationwide" : "DC Area Network" %></strong>
      </li>
      <li>
        <p>Deductible</p>
        <strong><%= plan.deductible %></strong>
      </li>
    </ul>
  </div>

  <div class="row">
    <div class="col-md-4 col-sm-4 col-xs-12">
      <label>
        <input type="checkbox" class="select-plan-for-comparison" data-hios-id="<%= plan.hios_id %>" data-plan-year="<%= plan.active_year %>"></input> &nbsp; <span>Compare</span>
      </label>
    </div>
    <div class="col-md-8 col-sm-8 col-xs-12">
      <div class="pull-right">
        <%= link_to "Details", summary_products_plans_path({:standard_component_id => plan.hios_id}), {:class => "btn btn-default btn-lg interaction-click-control-plan-details", :remote => true} %> &nbsp; 
        <%= link_to("Select Plan", thankyou_insured_plan_shopping_path(@hbx_enrollment, {:plan_id => plan.id}), {:class => "btn btn-info btn-lg interaction-click-control-select-plan", :method => :post}) %>
      </div>
    </div>
  </div>
</div><!-- Plan details row end -->
