<% plan_carrier = Caches::MongoidCache.lookup(CarrierProfile, plan.carrier_profile_id) { plan.carrier_profile } %>
<div class="plan-row panel panel-default" data-plan-category="<%= plan.plan_type ? plan.plan_type.downcase : "" %>" data-plan-metal-level="<%= plan.metal_level.downcase %>" data-plan-metal-network="<%= plan.nationwide ? "nationwide" : "dc area network" %>" data-plan-metal-premium="<%= plan.total_employee_cost %>" data-plan-metal-deductible="<%= plan.deductible %>" data-plan-name="<%= plan.name %>" data-plan-carrier="<%= plan_carrier.try(:legal_name) %>" data-plan-hsa-eligibility="<%= @plan_hsa_status[plan.id.to_s] %>">
  <div class="panel-body">
    <div class="row">
      <% if plan.try(:is_standard_plan) %>
          <div class="col-md-12"><i class="fa fa-bookmark"> STANDARD PLAN </i></div>
      <% end %>
    </div>
    <div class="row">
      <% if @enrolled_hbx_enrollment_plan_ids.include?(plan.id) %>
          <h5 class="col-md-12 current bg-title"><i class="fa fa-star fa-lg enrolling"></i>YOUR CURRENT <%= plan.try(:active_year) %> PLAN </h5>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-2 col-sm-2"><%= display_carrier_logo(plan_carrier.legal_name, {width: 80}) %></div>
      <div class="col-md-7">
        <h3 class="no-buffer">
          <%= link_to plan.name, summary_products_plans_path({:standard_component_id => plan.hios_id, hbx_enrollment_id: @hbx_enrollment.id, active_year: plan.try(:active_year), market_kind: @market_kind, coverage_kind: @coverage_kind}), {:remote => true} %>
          <br/>
          <small><%= plan_carrier.legal_name %></small>
        </h3>
      </div>
      <div class="col-md-3">
        <div class="price-wrapper pull-right">
          <h2 class="no-buffer plan-premium"><%= number_to_currency(plan.total_employee_cost) %></h2>
          <small>/Month</small>
        </div>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-md-9">
        <table class="table gn-10">
          <thead>
          <tr>
            <th>TYPE</th>
            <th>LEVEL</th>
            <th>NETWORK</th>
            <th>DEDUCTIBLE</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td><%= plan.plan_type ? plan.plan_type.upcase : "" %></td>

            <% plan_level = plan.metal_level.humanize %>
            <td><span class="<%= plan_level.downcase %>-icon"><%= plan_level %></span></td>
            <td><%= plan.nationwide ? "Nationwide" : "DC Area Network" %></td>
            <td><%= plan.deductible %></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3">
        <div class="checkbox no-buffer">
          <label>
            <input id="compare_plan_checkbox" type="checkbox" class="checkbox-custom select-plan-for-comparison" data-hbx-id="<%= @hbx_enrollment.id %>" data-hios-id="<%= plan.hios_id %>" data-plan-year="<%= plan.active_year %>"></input>
            <span for="compare_plan_checkbox" class="checkbox-custom-label">Compare</span>
          </label>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="row">
        <% if plan.sbc_document.present? %>
            <% key, bucket = get_key_and_bucket(plan.sbc_document.identifier) %>
            <%= link_to(document_download_path(bucket, key), class: "download") do %>
                <div>
                  <i class="fa fa-file-pdf-o fa-1x" style="position: relative; top: 7px;"></i>
                  <div class="fa-icon-label" style="display: inline; font-size: 8px; position: relative; top: 5px;">Summary of Benefits and Coverage</div>
            <% end %>
            </div>
        <% else %>
            <div>
              <i class="fa fa-file-pdf-o fa-1x" style="position: relative; top: 7px;"></i>
              <div class="fa-icon-label" style="display: inline; font-size: 8px; position: relative; top: 5px;">Summary of Benefits and Coverage</div>
            </div>
        <% end %>
      </div></div>
      <% if !@enrolled_hbx_enrollment_plan_ids.include?(plan.id) %>
          <div class="col-md-5 col-sm-5 col-xs-5 text-right">
            <%= link_to("Select Plan", thankyou_insured_plan_shopping_path(@hbx_enrollment, {:plan_id => plan.id, :change_plan => @change_plan, market_kind: @market_kind, coverage_kind: @coverage_kind, enrollment_kind: @enrollment_kind}), {:class => "btn btn-select pull-right btn-right", :method => :post}) %> &nbsp;
            <%= link_to "Details", summary_products_plans_path({:standard_component_id => plan.hios_id, hbx_enrollment_id: @hbx_enrollment.id, market_kind: @market_kind, coverage_kind: @coverage_kind, enrollment_kind: @enrollment_kind, active_year: plan.try(:active_year)}), {:class => "btn btn-default pull-right", :remote => true} %> &nbsp;

          </div>
      <% end %>
    </div>
  </div>
</div>

<style type="text/css">
    .fa-bookmark, .fa-check-square-o {
        color: green;
    }
</style>
