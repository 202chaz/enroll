<div class="container">
  <div class="employee-welocome">
    <div class="row">
      <div class="col-lg-9 col-md-9 col-sm-10 col-xs-12">
        <div class="col-md-12 col-sm-12 no-pd col-xs-12" id="confirm_plan">

            <h3>Confirm Your Plan Selection</h3>
            <p>Your current plan selection is displayed below. Click the back button if you want to change your selection. Click confirm to complete your enrollment.</p>
            <p>Your enrollment is not complete until you confirm your plan selection below.</p>
            <p>
              <strong><%= @plan.name %></strong><br>
              Starting on : <%= @enrollment.effective_on.strftime("%m/%d/%Y") %>
            </p>

            <br>

            <div class="table-border">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Relationship</th>
                  <th>Age</th>
                  <th class="text-right">Premium</th>
                  <th class="text-right" width="50">Employer Contribution</th>
                  <th class="text-right" width="50">You Pay</th>
                </tr>
              </thead>

              <tbody>
                <% total_cost, total_contribution, total_employee_cost = 0, 0, 0 %>
                <% @enrollment.hbx_enrollment_members.each do |member| %>
                  <tr>
                    <td><%= member.person.full_name %></td>
                    <td><%= member.primary_relationship %></td>
                    <td><%= member.person.age_on(Time.now.utc.to_date) %></td>
                    <td class="text-right"><%= number_to_currency(@plan.premium_for(member)) %></td>
                    <td class="text-right"><%= number_to_currency(@plan.employer_contribution_for(member)) %></td> 
                    <td class="text-right"><%= number_to_currency(@plan.employee_cost_for(member)) %></td>
                    <% total_cost += @plan.premium_for(member) %>
                    <% total_contribution += @plan.employer_contribution_for(member) %>
                    <% total_employee_cost += @plan.employee_cost_for(member) %>
                  </tr>
                <% end %>
                <tr class="gray-row">
                  <td colspan="3" class="text-right capital"><strong>Totals</strong></td>
                  <td class="text-right"><strong><%= number_to_currency(total_cost) %></strong></td>
                  <td class="text-right"><strong><%= number_to_currency(total_contribution) %></strong></td>
                  <td class="text-right"><strong><%= number_to_currency(total_employee_cost) %></strong></td>
                </tr>
                <tr>
                  <td colspan="5" class="text-right">Your coverage start date :</td>
                  <td><%= @enrollment.effective_on.strftime("%m/%d/%Y") %></td>
                </tr>
              </tbody>
            </table>
          </div><br>
          </div>

          <%= link_to("Waive", waive_insured_plan_shopping_path(@enrollment, {:plan_id => @plan.id}), {:class => "btn btn-default", :method => :post}) %>
          <%= link_to '<i class="fa fa-shopping-cart"></i>
   Purchase'.html_safe, checkout_insured_plan_shopping_path(@enrollment, :plan_id => @plan.id), :class => "btn btn-primary btn-continue pull-right", :method => :post %>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 right-section">
          <%= render  partial: 'shared/signup_progress', locals: {step: '6'} %>
        </div>
    </div>
  </div>
</div><br>
