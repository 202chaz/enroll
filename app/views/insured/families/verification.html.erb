<% content_for :navigation do %>
    <%= render 'navigation' %>
<% end %>
<h2>Family Verification Dashboard</h2>
<div class="col-xs-12 documents-tab">
  <% unless @person.has_consumer_role? %>
      <h4>No results found</h4>
  <% else %>
      <br/>
<h4 class="starter">We verify the information you give us using electronic data sources.
  If the data sources do not match the information you gave us, we need you to provide documents to prove what you told us.</h4>
      <div class="row">
        <% unless enrollment_group_verified?(@person) %>
          <div class="col-md-7">
            <h4>Enrollment group verification status: <%= coverage_household_verification %></h4>
          </div>
          <div class="col-md-5">
            <h4>Verification due date: <%= verification_due_date %></h4>
            <%= link_to "Send all documents for review", "#", class: "btn btn-success btn-xs pull-right", data: { confirm: 'Click OK if you would like to send all your documents for review.' } %>
          </div>
        <% end %>
      </div>
      <div class="module ivl-documents-table panel">
        <div class="table-responsive">
          <table class="table table-striped table-hover table-sm">
            <thead class="thead-default">
              <tr>
                <th>Family Member</th>
                <th>Person <br>Verification Status</th>
                <th>Verification Type</th>
                <th>Documents</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
            <% @family_members.each do |member|%>
              <tr class="<%= cycle("odd", "even top") %>">
                <td>
                  <%= member.person.first_name %> <%= member.person.last_name%>
                </td>
                <td>
                  <%= show_consumer_role_state(member.person.consumer_role) %>
                </td>
                <td colspan="2">
                  <% if unverified?(member.person) %>
                    <%= render partial: 'insured/families/verification/unverified_person', locals: {member: member} %>
                  <% end %>
                </td>

                <td class="table-functions">
                  <a data-toggle="collapse" href="#<%= member.id %>" aria-expanded="false" aria-controls="<%= member.id %>">
                    <% if member_has_uploaded_docs(member) %>
                      <i class="fa fa-caret-down fa-lg" data-toggle="tooltip" title="Documents"></i>
                    <% end %>
                  </a>
                </td>
              </tr>
                <div id="verification_docs_table">
                  <%= render partial: "insured/families/verification/verification_docs_table", locals: {member: member} %>
                </div>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>

  <% end %>
</div>
