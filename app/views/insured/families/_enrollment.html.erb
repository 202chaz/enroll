<% plan = hbx_enrollment.try(:plan) %>
<div class="hbx-enrollment-panel">
  <div class="panel panel-default min-h">

    <div class="panel-heading">
      <h4><%= plan.active_year %> <%= plan.coverage_kind %> Coverage <span class="separator"><%= hbx_enrollment.employee_role.blank? ? 'DCHL' : hbx_enrollment.employer_profile.legal_name %></span></h4>
      <hr>
    </div>

    <div class="panel-body">
      <div class="row">
        <div class="col-xs-8">
          <div><%= display_carrier_logo(plan.try(:carrier_profile).try(:legal_name), {width: 110}) %></div>
          <h4>
            <strong><%= link_to plan.try(:name), summary_products_plans_path({:standard_component_id => plan.try(:hios_id), hbx_enrollment_id: hbx_enrollment.id, active_year: plan.try(:active_year)}), remote: true %></strong>
          </h4>

          <div><p><%= render_plan_type_details(plan) %></p></div>
          <div>
            <p>
              <label>Premium:</label> <strong><%= number_to_currency(hbx_enrollment.total_premium) %></strong>/month
              <label class="bullet-separator">&nbsp;DCHL ID:</label>
              <strong><%= hbx_enrollment.try(:subscriber).try(:person).try(:hbx_id) %></strong>
            </p>
          </div>
          <% if hbx_enrollment.consumer_role.present? and hbx_enrollment.try(:applied_aptc_amount) > 0 %>
              <div>
                <p>
                  <label>APTC amount:</label>
                  <strong><%= number_to_currency(hbx_enrollment.applied_aptc_amount, precision: 2) %></strong>/month
                </p>
              </div>
          <% end %>
          <% names = hbx_enrollment.covered_members_first_names %>
          <div class="family-members">
            <p>
              <label>Covered:</label>
              <a href="#"><%= names.delete_at(0).camelcase %></a>
              <% names.each do |name| %>
                  <span class="separator"><a href="#"><%= name.camelcase %></a></span>
              <% end %>
            </p>
          </div>
          <div>
            <label>Effective date: </label>
            <strong><%= hbx_enrollment.effective_on %></strong>
          </div>
        </div>
        <div class="col-xs-4">
          <div class="family-plan-selection">
            <div class="status">
              <%= render partial: "enrollment_progress", locals: {step: hbx_enrollment.status_step} %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-4 fa-icon-link">
          <% if plan.sbc_document.present? %>
              <% key, bucket = get_key_and_bucket(plan.sbc_document.identifier) %>
              <%= link_to(document_download_path(bucket, key) + "?contenttype=application/pdf&filename=#{plan.name}.pdf", class: "download") do %>
                  <i class="fa fa-file-pdf-o fa-2x pull-left" style="padding-top: 0.15em"></i>
                  <div class="fa-icon-label">Summary of Benefits and Coverage</div>
              <% end %>
          <% else %>
              <i class="fa fa-file-pdf-o fa-2x pull-left" style="padding-top: 0.15em"></i>

              <div class="fa-icon-label">Summary of Benefits and Coverage</div>
          <% end %>
        </div>
        <div class="col-xs-3">
          <a href="#">
            <i class="fa fa-phone fa-2x pull-left"></i>

            <div class="fa-icon-label">Carrier Contact Info</div>
          </a>
        </div>
        <div class="col-xs-5">
          <div class="row">
          <div class="col-xs-12">
            <div class="row">
            <div class="col-xs-6">
              <div class="row">
          <%= link_to "View Details", summary_products_plans_path({standard_component_id: plan.try(:hios_id), hbx_enrollment_id: hbx_enrollment.id, active_year: plan.try(:active_year)}), {class: 'btn btn-primary btn-sm pull-right', remote: true} %>
        </div>
        </div>
        <div class="col-xs-6">
          <div class="row">

          <% if hbx_enrollment.can_complete_shopping? %>
              <%= link_to "Change Plan", new_insured_group_selection_path(person_id: @person.id, employee_role_id: @employee_role.try(:id), change_plan: 'change_plan'), class: "btn btn-primary btn-sm pull-right", style: 'margin-right: 20px;' %>
          <% elsif hbx_enrollment.may_terminate_coverage? && hbx_enrollment.kind == "individual" %>
              <%= link_to "Terminate Plan", terminate_confirm_insured_group_selections_path(hbx_enrollment_id: hbx_enrollment.id), {class: 'btn btn-primary btn-sm pull-right', style: 'margin-right: 20px;'} %>
          <% end %>
        </div>

        </div>
      </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% if hbx_enrollment.kind == "individual" %>
    <div class="alert alert-warning alert-dismissible panel-footer" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong>Important:</strong> Your enrollment application requires information that needs to be verified.
      <%= link_to "Learn more", documents_index_insured_families_path %>
    </div>
    <% end %>

  </div>
</div>
