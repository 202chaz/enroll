<% plan = hbx_enrollment.try(:plan) %>
<div class="hbx-enrollment-panel">
<h1>My DC Health Link</h1>  
<div class="panel panel-default min-h">

  <div class="panel-heading">
    <h4>2015 Health Coverage <span class="separator">DC HBX</span></h3>
  </div>

  <div class="panel-body">
    <div class="row">
      <div class="col-xs-8">
        <div><%= display_carrier_logo(plan.carrier_profile, {width: 110}) %></div>
        <h4><%= link_to plan.name, summary_products_plans_path({:standard_component_id => plan.hios_id, hbx_enrollment_id:hbx_enrollment.id}), {:remote => true} %>
        </h4>
          <div>
            <p>
            <label><%= plan.try(:plan_type).try(:upcase) %></label>
            <% plan_level = plan.try(:metal_level).try(:humanize) %>
            <label class="<%= plan_level.try(:downcase) %>-icon"><%= plan_level %></label>
            </p>
          </div>
          <div>
            <p> 
              <label>Premium:</label> <strong><%= number_to_currency(hbx_enrollment.total_premium) %></strong>/month
              <label class="bullet-separator">Member ID:</label> <%#= hbx_enrollment.try(:subscriber).try(:id).try(:to_s) %>
              <label class="bullet-separator">Group ID:</label> <%#= hbx_enrollment.try(:benefit_group_id).try(:to_s) %>
            </p>
          </div>
            <% names = hbx_enrollment.covered_members_first_names %>
            <div class="family-members">
              <p>
                <label>Covered:</label>
                  <%= names.delete_at(0).camelcase %>
                  <% names.each do |name| %>
                    <span class="separator"><%= name.camelcase %></span>
                  <% end %>
              </p>
            </div>
          </div>
          <div class="col-xs-4">
            <%= render partial: "enrollment_progress", locals: {step: 2} %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-5">
            <p><i class="fa fa-file-pdf-o fa-lg"></i>&nbsp;Summary of Benefits and Coverage</p>
          </div>
          <div class="col-xs-4">
            <p><i class="fa fa-phone fa-lg"></i>&nbsp;Carrier Contact Info</p>
          </div>
          <div class="col-xs-3">
            <button type="button" class="btn btn-danger btn-md pull-right">VIEW DETAILS</button>
          </div>
        </div>
      </div>

      <div class="alert alert-warning alert-dismissible panel-footer" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>
        </button>
        <strong>Important:</strong>Your enrollment application requires information that needs to be verified. <a href="#">Learn more</a>
      </div>
    </div>
</div>


