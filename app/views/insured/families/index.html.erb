<%- model_class = Family -%>
<%t '.title', :default => model_class.model_name.human.pluralize.titleize %>
<div class="page-header">

  <div class="row">
    <div class="col-md-offset-8 col-md-4">
      <%= render 'shared/search', url: family_index_exchanges_hbx_profiles_path, q: @q, placeholder: "Name, HBX ID, SSN" %>
    </div>
  </div>
</div>

<div id="families">
  <%= render "insured/families/families_table", families: @families %>
</div>

<div class="row">
  <div class="col-md-8" id="families_paginator">
    <%= paginate @families, :remote => true, :param_name => "families_page" %>
  </div>

  <div class="rol-md-4" id="families_count">
    <p><%= "#{number_with_delimiter(@families.count)} / #{number_with_delimiter(Family.count)} " %><small>(families selected / total)</small></p>
  </div>
</div>
