%person
  %id
    %id= person.hbx_id
  = render :partial => "events/shared/person_name", :object => person
  - if person.addresses.any?
    %addresses
      = render :partial => "events/addresses/address", :collection => person.addresses
  - if person.emails.any?
    %emails
      = render :partial => "events/emails/email", :collection => person.emails
  - if person.phones.any?
    %phones
      = render :partial => "events/phones/phone", :collection => person.phones
