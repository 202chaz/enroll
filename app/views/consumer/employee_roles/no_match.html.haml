.container
  #new_person_wrapper
    .row
      = form_for @person, { :as => :person, :url => match_consumer_employee_index_path, :method => :get } do |f|
        .col-lg-7.col-md-7.col-sm-8.col-xs-12
          %h3 Personal Information
          = render 'remote_search_form', f: f
          #person_search_results
            = render 'no_match'
          %br
          .row
            .col-md-8.col-sm-8.col-xs-12
              %dl.dl-horizontal
                %dt Not your employer :
                %dd= "If you wish to purchase coverage for you or your family members in the individual market place, please click here"
            .col-md-4.col-sm-4.col-xs-12.text-right
              = link_to "Individual Market", consumer_consumer_role_index_path(person: @person_params), method: :post, :class => "btn btn-select"
        .col-lg-3.col-md-3.col-sm-3.col-xs-12.col-md-offset-2.col-sm-offset-1.right-section
          = render  partial: 'shared/signup_progress', locals: {step: '1'}