.row
  .col-md-10.col-sm-10
    %h1= t('welcome.employee.title')
    %h2= t('welcome.employee.subtitle')

    %p.text-justify= simple_format(t('welcome.employee.paragraph1'))
    %p.text-justify= t('welcome.employee.paragraph2')
    %p.text-justify= t('welcome.employee.paragraph3')
    %br

.row
  .col-md-2
    = link_to search_consumer_employee_index_path, class: 'btn btn-primary btn-continue' do
      %i.fa.fa-user-plus
      = t('button.continue')

.row.footer
  .col-md-12
    %small
      = t('welcome.employee.notice')
      = link_to t('welcome.link'), '#'
