<div class="col-md-11 col-sm-12 col-xs-12">
  <p class="information row" style="opacity: 0.2;">Personal Information</p>
  <div id="overlay"></div>
    <div id="personal_info" class="focus_effect row personaol-info-row" style="opacity: 0.5;">
      <div class="col-md-10 no-pd col-sm-9 col-xs-12 first">

        <%= f.fields_for :person, errors: {}, fieldset: false do |name|  %>
          <%= render 'shared/name_fields', f: name %>
        <% end %>

        <%= render 'shared/id_info_fields', f: f %>

        <div class="error">
          <div class="warning"><i class="fa fa-exclamation-triangle"></i>
            All fields Required</div>
        </div>
      </div>
      
      <div class="col-md-2 key no-pd-right col-sm-3 col-xs-12" style="display: none;">
        <a href="#" class="btn btn-save">Save & Exit</a>
        <p class="top-pad">
          <span>Your personal information is safe, secured with 64 bit SSL encryption</span>
          <span><i></i></span>
        </p>
      </div>
    </div>
    
    <br>

    <div id="address_info" class="focus_effect row personaol-info-row" style="opacity: 0.5;">
      <div class="col-md-10 no-pd col-sm-9 col-xs-12 first">
        <div class="row top-row">
          <div class="col-md-9 col-sm-9 col-xs-12 form-group form-group-lg no-pd address">
            <div class="form-group form-group-lg">
              <div class="row" style="margin: 0;">
                <div class="col-md-4 col-sm-3 col-xs-0 bg-color"></div>
                <div class="col-md-4 col-sm-6 col-xs-12 no-pd">
                  <div class="dropdown">
                    <button class="form-control float-label adderess-select-box border-bottom-none border-right-none form_group_lg dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                      Home Address
                      <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                      <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Home Address</a></li>
                      <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Work Address</a></li>
                      <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Mailing Address</a></li>
                    </ul>
                  </div>
                </div>
                <div class="col-md-4 col-sm-3 col-xs-0 bg-color"></div>
              </div>
            </div>  
          </div>
          <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
            <button class="btn btn-new-address border-bottom-none">NEW ADDRESS</button>
            <!-- <button class="btn btn-new-address">NEW ADDRESS</button> -->
          </div>
        </div>

        <div class="row middle-row form-group form-group-lg no-pd">
          <div class="col-md-6 col-sm-6 col-xs-12 form-group form-group-lg no-pd">
            <input type="text" class="floatlabel form-control border-bottom-none border-right-none" placeholder="ADDRESS LINE 1">
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12 form-group form-group-lg no-pd">
            <input type="text" class="floatlabel form-control border-bottom-none" placeholder="ADDRESS LINE 2">
          </div>
        </div>

        <div class="row bottom-row">
            <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
              <input type="text" class="floatlabel form-control border-right-none" placeholder="CITY">  
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
              <input type="text" class="floatlabel form-control border-right-none" placeholder="STATE">
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
              <input type="text" class="floatlabel form-control border-right-none" placeholder="COUNTRY">
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
              <input type="text" class="floatlabel form-control" placeholder="ZIP">
            </div>
          </div>
          <div class="error">
            <div class="warning"><i class="fa fa-exclamation-triangle"></i>
              All fields Required</div>
          </div>
      </div>
      
      

      <div class="col-md-2 key col-sm-3 col-xs-12">
        <!-- <p class="top-pad">Use the drop down to create new addresses</p> -->
      </div>
    </div>

    <br>

    <div id="phone_info" class="focus_effect row personaol-info-row" style="opacity: 0.5;">
      <div class="phone col-md-10 col-sm-9 col-xs-12 no-pd first">
        <div class="row top-row">
          <div class="col-md-6 col-sm-6 no-pd">
            <div class="form-group form-group-lg">
              <input type="text" class="floatlabel form-control border-bottom-none border-right-none" placeholder="HOME">
            </div>  
          </div>
          <div class="col-md-6 col-sm-6 no-pd">
            <div class="form-group form-group-lg">
              <input type="text" class="floatlabel form-control border-bottom-none" placeholder="BUSINESS">
            </div>  
          </div>
        </div>
        <div class="row bottom-row">
          <div class="col-md-6 col-sm-6 no-pd">
            <div class="form-group form-group-lg">
              <input type="text" class="floatlabel form-control border-right-none" placeholder="CELL">
            </div>  
          </div>
          <div class="col-md-6 col-sm-6 no-pd">
            <div class="form-group form-group-lg">
              <input type="text" class="floatlabel form-control" placeholder="FAX">
            </div>  
          </div>
        </div>
        <div class="error">
          <div class="warning"><i class="fa fa-exclamation-triangle"></i>
            All fields Required</div>
        </div>
      </div>
    </div>

    <br>
    
    <div id="email_info" class="focus_effect row personaol-info-row" style="opacity: 0.5;">
      <div class="email">
        <div class="col-md-10 col-sm-9 no-pd first">
          <div class="form-group form-group-lg">
            <input type="text" class="floatlabel form-control" placeholder="NAME@DOMAIN.COM">
          </div>  
          <div class="error">
            <div class="warning"><i class="fa fa-exclamation-triangle"></i>
              All fields Required</div>
          </div>
        </div>
      </div>
    </div>


    <div class="focus_effect row personaol-info-row" style="opacity: 0.5;">
      <div class="">
        <div class="col-md-10 col-sm-9 no-pd">
        </div>
        <div class="col-md-2 col-sm-3 no-pd">
          <a href="#" class="btn disable-btn">Continue</a>
        </div>
      </div>
    </div>

    <div class="autofill-cloud autofill-initial hidden">
      <div class="row">
        <div class="col-md-12 text-center">
          <%= image_tag 'autofill-cloud.png' %>
          <span class="close"></span>
        </div>
        <p>
          We may be able to auto-fill your information with data from our records.
        </p>
        <a href="#" class="btn btn-ok autofill_yes">Yes</a>
        <div class="clearfix"></div>
        <a href="#" class="btn btn-cancel autofill_no">No Thanks</a>
      </div>
    </div>
    <div class="autofill-cloud autofill-failed hidden">
      <div class="row">
        <div class="col-md-12 text-center">
          <%= image_tag 'autofill-cloud-failed.png' %>
          <span class="close"></span>
        </div>
        <p>
          We were not able to find your information. Double check your social security number and birthdate
        </p>
        <a href="#" class="btn btn-try-again btn-primary">Try Again</a>
      </div>
    </div>
    <div class="less-opacity hidden">
      <%= image_tag 'autofill-cloud.png' %>
      <p>Autofill</p>
    </div>
  </div>