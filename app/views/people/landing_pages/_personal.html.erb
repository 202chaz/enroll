<div id="personal_info" class="focus_effect row">
  <div class="col-md-12 no-pd col-sm-12 col-xs-12 first employee-info">
    <%= hidden_field "people","id" %>
    
  <div class="row top-row">
    <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
      <%= text_field_tag :first_name, class: "required floatlabel form-control", required: true, placeholder: 'FIRST NAME' %>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
      <%= text_field_tag :middle_name, class: "floatlabel form-control", placeholder: 'MIDDLE NAME' %>
    </div>
  </div>
</div>

<table class="table table-bordered search-table personal-table" style="border-color: rgb(0, 163, 217) ! important;">
  <tbody>
    <tr>
      <td>
        <span>FIRST NAME</span>
        <span><%= @person.first_name %></span>
      </td>
      <td>
        <span>MIDDLE NAME</span>
        <span><%= @person.middle_name %></span>
      </td>
      <td>
        <span>LAST NAME</span>
        <span><%= @person.last_name %></span>
      </td>
      <td>
        <span>SUFFIX</span>
        <span><%= @person.name_sfx %></span>
      </td>
    </tr>
    <tr>
      <td>
        <span>BIRTHDATE</span>
        <span><%= @person.dob %></span>
      </td>
      <td>
        <span>SOCIAL SECURITY</span>
        <span><%= @person.ssn %></span>
      </td>
      <td>
        <div class="radio">
          <label>
            <input type="radio" checked="" value="option1" name="optionsRadios">
            MALE
          </label>
        </div>
      </td>
      <td>
        <div class="radio">
          <label>
            <input type="radio" value="option1" id="optionsRadios1" name="optionsRadios">
            FEMALE
          </label>
        </div>
      </td>
    </tr>
  </tbody>
</table>
