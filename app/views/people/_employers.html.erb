<% if @employers.present? %>
	<p>
		<span> Please select your Employer.</span>
		<a class="pull-right" href="#">Search Again?</a>
	</p>

	<ul class="list-group">
		<% @employers.each do |employer| %>
			<li class="list-group-item">
				<div class="row">
					<div class="col-md-3 col-sm-9 col-xs-9">
						<h4><%= employer %></h4>
					</div>
					<div class="col-md-7 col-sm-1 col-xs-1">
					</div>
					<div class="col-md-2 col-sm-2 col-xs-2">
						<span class="badge"><i></i></span>
					</div>
				</div>
			</li>
		<% end %>
	</ul>
<% else%>
	<script type="text/javascript">
		$('.autofill-failed').removeClass('hidden');
		$('#address_info').removeClass('hidden');
	    $('#phone_info').removeClass('hidden');
	    $('#email_info').removeClass('hidden');
	</script>
<% end %>