<% if @employers.present? %>
	<p>
		<span> Please select your Employer.</span>
		<a class="pull-right" href="#">Search Again?</a>
	</p>

	<ul class="list-group">
		<% @employers.each do |employer| %>
			<li class="list-group-item">
				<div class="row">
					<div class="col-md-3 col-sm-9 col-xs-9">
						<h4><%= employer.name %></h4>
					</div>
					<div class="col-md-7 col-sm-1 col-xs-1">
					</div>
					<div class="col-md-2 col-sm-2 col-xs-2">
						<span id="badge" class="badge" style="cursor:pointer"><i></i></span>
					</div>
				</div>
			</li>

		<% end %>
  </ul>
  <div style="float:right;">
    <a href="#" class="btn btn-save search_continue" >Continue</a>
  </div>
<% end %>
<script>
$('.search_continue').hide();
$(".badge").on('click',function(){
  $('.badge').removeClass('badge-active');
  $(this).toggleClass('badge-active');
  $('.search_continue').show();
});
</script>