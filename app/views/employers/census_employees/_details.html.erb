<% census_employee = @family.census_employee %>
<% dependents = @family.census_dependents %>
<% address = census_employee.address %>
<h3>Family Details</h3>
<div class="row">
  <div class="col-md-6 col-sm-6 col-xs-12">
    <h3>Employee Details</h3>
    <p>
      Name: 
      <%= name_to_listing(census_employee) %>
      <br/>
      DOB:
      <%= format_date census_employee.dob %>
      <br/>
      Hired On:
      <%= format_date census_employee.hired_on %>
    </p>
  </div>
  <div class="col-md-6 col-sm-6 col-xs-12">
    <h3>Address</h3>
    <% if address.present? %>
      <%= address.to_s %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <h3>Dependents</h3>
    <% if dependents.present? %>
      <table>
        <tr>
          <th>Name</th>
          <th>DOB</th>
          <th>Relationship</th>
          <th>Gender</th>
        </tr>
        <% dependents.each do |dependent| %>
          <tr>
            <td>
              <%= dependent.first_name + " " + dependent.last_name %>
            </td>
            <td>
              <%= format_date dependent.dob %>
            </td>
            <td>
              <%= dependent.employee_relationship %>
            </td>
            <td>
              <%= dependent.gender %>
            </td>
          </tr>
        <% end %>
      </table>
    <% else %>
      <p>No Dependents</p>
    <% end %>
  </div>
</div>
<%= link_to '<i class="fa fa-chevron-left"></i> Back'.html_safe, 'javascript:;', class: 'btn btn-primary return_to_employee_roster' %>