<div class="row">
  <div class=<%= @benefit_group.plan_option_kind == "single_plan" ? "col-xs-9" : "col-xs-12" %>>
    <h4><%= @benefit_group.title %></h4>
    <h4>Plan Offerings - <%= render_plan_offerings(@benefit_group) %></h4>
    <table class="table table-bg-white table-employee-2">
      <thead>
        <tr>
          <th>Employee</th>
          <th>Dependent Count</th>
          <% if !@benefit_group.single_plan_type? %>
          <th>Lowest Cost Available Plan</th>
          <% end %>
          <th>Reference Plan</th>
          <% if !@benefit_group.single_plan_type? %>
          <th>Highest Cost Available Plan</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% if @benefit_group.census_employees.active.any? %>
        <% @benefit_group.census_employees.active.each do |census_employee| %>
        <tr> 
          <td> <%= census_employee.full_name %></td>
          <td> <%= census_employee.census_dependents.count %></td>
          <% if !@benefit_group.single_plan_type? %>
          <td> <%= @benefit_group_costs[census_employee.id][:lowest_plan_cost] %></td>
          <% end %>
          <td> <%= @benefit_group_costs[census_employee.id][:ref_plan_cost] %></td>
          <% if !@benefit_group.single_plan_type? %>
          <td> <%= @benefit_group_costs[census_employee.id][:highest_plan_cost] %></td>
          <% end %>
        </tr>
        <% end %>
        <% else %>
        <tr> <td> No employees enrolled.</td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>