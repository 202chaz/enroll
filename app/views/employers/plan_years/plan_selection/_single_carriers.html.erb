<% @plans.each do |p| %>
<div class="col-xs-3">
  <div class="col-xs-12 reference-plan">
    <%= link_to plan_details_employers_employer_profile_plan_years_path(@employer_profile, reference_plan_id: p.id ), remote: true do %>
    <div class="col-xs-3">
      <%= radio_button "plan_year[benefit_groups_attributes][0]", :reference_plan_id, p.id %>
      <%= label_tag :reference_plan_id, "" do %>
      <i class="fa fa-circle-o"></i>
      <i class="fa fa-dot-circle-o"></i>
      <% end %>
    </div>
    <% end %>
    <div class="col-xs-9">
      <div class="panel row">
        <div class="panel-heading">
          <h3><%= p.name %></h3>
        </div>
        <div class="panel-body">
          <span class="plan-label">Type: </span><span><%= p.plan_type %></span><br>
          <span class="plan-label">Level: </span><span><%= p.metal_level %></span><br>
          <span class="plan-label">Nationwide: </span><span><%= p.nationwide%></span><br>
        </div>
      </div>

    </div>
  </div>
</div>
<% end %>
