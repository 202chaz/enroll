<div class="row content landing">
  <div class="container-fluid no-pd-left">          
    <div class="panel panel-default">
      <div class="panel-body left">

        <div class="col-sm-2 left-pd" id="sidebar_partial_value">
          <%= render 'sidebar' %>
        </div>

        <div class="col-md-10 col-sm-12 employer-section">

          <%= render 'welcome_msg' %>

          <div class="col-md-11 col-sm-12 col-xs-12">
            <% if @employer.errors.any? %>
              <div class="alert alert-error">
                <h4><%= pluralize(@employer.errors.count, "error") %> prohibited this employer from being saved:</h4>
                <ul>
                  <% @employer.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div id="overlay"></div>
                
            <div id="credential_info" class="focus_effect row personaol-info-row margin-top" style="opacity: 0.5;">
              <%= render 'credentials_fields', f: f %>
            </div><br>

            <div id="name_info" class="focus_effect row personaol-info-row" style="opacity: 0.5;">
              <%= render 'name_fields', f: f %>
            </div><br>

            <div id="tax_info" class="focus_effect row personaol-info-row" style="opacity: 0.5;">
              <%= render 'tax_fields', f: f %>
              <div class="col-md-2 col-sm-2 col-xs-12">
                <%= f.submit 'Continue', :class => 'btn btn-continue' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>