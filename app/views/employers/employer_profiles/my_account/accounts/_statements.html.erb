<table class="table">
  <thead>
    <tr>
      <th>Year</th>
      <th>Statement Date</th>
      <th>Coverage Period</th>
      <th>Download</th>
      <th>View</th>
    </tr>
  </thead>
  <tbody>
    <tr data-toggle="collapse" data-target="#collapse2" id="2017">
      <td><i class='glyphicon glyphicon-plus' data-toggle='tooltip'></i> 2017</td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <% invoices_2 = get_invoices_for_year(@invoices, 2017) %>
      <% if invoices_2.empty? %>
        <tr class="inovices 2017">
          <td></td>
          <td>You have no invoices for this year</td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% else %>
        <% invoices_2.each do |invoice| %>
          <tr class="invoices 2017">
            <td></td>
            <td><%= invoice_formated_date(invoice.date) %></td>
            <td><%= invoice_coverage_date(invoice.date) %></td>
            <td><%= link_to "<i class='fa fa-cloud-download' aria-hidden='true' title='Download' data-toggle='tooltip'></i>".html_safe, download_invoice_employers_employer_profile_path(@employer_profile, :invoice_id => invoice.id), :target => "_blank" , :type => "pdf", :disposition =>  "inline" %></td>
            <td><%= link_to "<i class='glyphicon glyphicon-open-file' aria-hidden='true' data-toggle='tooltip'></i>".html_safe, show_invoice_employers_employer_profile_path(@employer_profile, :invoice_id => invoice.id), :target => "_blank"%></td>
          </tr>
        <% end %>
      <% end %>
    </tr>
