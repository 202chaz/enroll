        <% end %>
      <% end %>
    </tr>
  </tbody>
</table>

<script>
  $('td i').click(function() {
    $(this).toggleClass("glyphicon glyphicon-plus glyphicon glyphicon-minus");
  });

  $(document).ready(function() {
    $('tr.invoices').hide();

    $('#2017').click(function() {
      $('tr.2017').toggle();
    });

    $('#2016').click(function() {
      $('tr.2016').toggle();
    });

    $('#2015').click(function() {
      $('tr.2015').toggle();
    });
  });
</script>
