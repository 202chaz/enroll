<div class="col-xs-12 employees-tab">

    <div class="row">
  <div class="col-xs-6">
    <h1>Employee Roster</h1>
  </div>
  <div class="col-xs-6">
    <div class="col-xs-12">

      <div class="row">
      <%= form_tag employers_employer_profile_path(@employer_profile), method: :get, remote: true, class: 'input-no-pd', id: 'census_employee_search' do %>
      <%= hidden_field_tag(:status, 'active') %>
      <%= hidden_field_tag(:search, true) %>
      <div class="input-group">
        <%= text_field_tag(:employee_name, params[:employee_name], placeholder: 'Employee Name', class: 'form-control') %>
        <div class="input-group-btn">
          <div class="btn btn-default" id='census_employee_search_clear'>
            <span aria-hidden="true" class="glyphicon glyphicon-remove"></span>
          </div>
          <%= submit_tag "Search", class: 'btn btn-default' %>
        </div>
      </div>
      <% end %>
    </div>
    </div>
  </div>
</div>

  <div class="col-xs-12">
    <div class="row">
    <div class="col-xs-8">
      <div class="row">
        <% if @employer_profile.plan_years.empty? %>
<!--  non javascript click when clicked on new employee -->
        <%= link_to 'Add New Employee', new_employers_employer_profile_census_employee_path(@employer_profile, tab: 'employees'), class: "btn btn-trans"  %>
        <% else %>
<!-- javascript click when clicked on new employee -->
        <%= link_to 'Add New Employee', new_employers_employer_profile_census_employee_path(@employer_profile, tab: 'employees'), class: "btn btn-trans" %>
        <%= link_to 'Upload Employee Roster', new_employers_employer_profile_census_employee_path(@employer_profile, tab: 'employees'), class: "btn btn-trans" %>

        <% end %>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="row">
      <div class="form-inline button-group-wrapper">
        <div aria-label="" class="btn-group" role="group">
          <div class="btn-group" data-toggle="buttons" name="employee_family_tabs">
            <label class="btn btn-default active">
              <input autocomplete="off" checked id="terminated_no" name="options" type="radio" value="active">
              Active
            </label>
            <label class="btn btn-default">
              <input autocomplete="off" id="terminated_yes" name="options" type="radio" value="terminated">
              Terminated
            </label>
            <label class="btn btn-default">
              <input autocomplete="off" id="family_all" name="options" type="radio" value="all">
              All
            </label>
          </div>
        </div>
        <span name="employee_families_url" style="display:none"><%= employers_employer_profile_path(@employer_profile) %></span>
      </div>
    </div>
    <div class="filter">
    Filter By <i class="fa fa-chevron-down"></i>
    </div>
    <div class="filter-options" style="display: none;">
      <ul>
        <li><%= link_to "New Filter", employers_employer_profile_path(@employer_profile) %></li>
        <li></li>
        <li></li>
        <li></li>
      </ul>
    </div>

  </div>
    </div>
<div class="row">

    <%= render "employers/employer_profiles/my_account/employees_by_status", status: 'active' %>
</div>
    <div id="employee_roster">

        <script>
          //$(function() {
          //  $( "#employee_name" ).autocomplete({
          //    source: <%= raw @avaliable_employee_names.to_s %>
          //  });
          //});
        </script>


      <div id="employee_families">
        <div id="employees_active">
        </div>
        <div id="employees_waived"></div>
        <div id="employees_terminated"></div>
        <div id="employees_all"></div>
      </div>

    </div>




</div></div>
