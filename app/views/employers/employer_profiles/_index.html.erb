<div id= 'message_form'></div>
<div class="row" id="inbox_provider_form">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <h3 class="title-inline">Employers</h3>

    <div class="form-inline button-group-wrapper">
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 search-wp">
        <%= render 'shared/search', url: employers_employer_profiles_path, q: @q, placeholder: 'Name' %>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 no-pd">
        <%= link_to 'New Employer Profile'.html_safe, new_employers_employer_profile_path, class: "btn btn-primary pull-right new_emp_button new_employer_profile new_employer_profile_btn" %>
      </div>
    </div>
  </div>

  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="table-responsive">
      <table class="table table-wrapper" style="opacity: 1;">
        <thead>
          <tr>
            <th>Name</th>
            <th>Rostered EE Ct</th>
            <th>Broker Agency</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @employer_profiles.each do |er| %>
            <tr>
              <td><%= link_to er.legal_name, employers_employer_profile_path(er) %></td>
              <td><%= er.roster_size %></td>
              <td><%= er.broker_agency_profile.try(:legal_name) %></td>
              <%- if @profile %>
              <td><%= link_to 'Send Secure Message'.html_safe, new_employers_inbox_path(id: er.id, profile_id: @profile._id, to: er.legal_name), class: "btn btn-default", remote: true %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= render 'shared/alph_paginate', url: employers_employer_profiles_path, alphs: @page_alphabets %>
    </div>
  </div>
</div>
