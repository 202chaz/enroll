<thead>
  <tr>
    <th>HBX Acct</th>
    <th>Legal Name</th>
    <th>FEIN</th>
    <th>EE Ct</th>
    <th>Enroll Status</th>
    <th>Effective Date</th>
    <th>Broker Agency</th>
    <th>&nbsp;</th>
  </tr>
</thead>

<tbody>
  <% @employer_profiles.each do |er| %>
    <tr>
      <td><%= er.hbx_id %></td>
      <td><%= link_to er.legal_name, employers_employer_profile_path(er) %></td>
      <td><%= number_to_obscured_fein(er.fein) %></td>
      <td><%= er.roster_size %></td>
      <td><%= er.aasm_state.humanize %></td>
      <td><%= er.published_plan_year.try(:effective_date) %></td>
      <%- if er.active_broker_agency_account.present? %>
        <td><%= link_to er.active_broker_agency_account.broker_agency_profile.legal_name, broker_agencies_profile_path(er.active_broker_agency_account.broker_agency_profile) %></td>
      <%- else %>
        <td>None selected</td>
      <% end %>
      <%- if @profile %>
      <td><%= link_to 'Send Secure Message'.html_safe, new_employers_inbox_path(id: er.id, profile_id: @profile._id, to: er.legal_name), class: "btn btn-default", remote: true %></td>
      <% end %>
    </tr>
  <% end %>
</tbody>
