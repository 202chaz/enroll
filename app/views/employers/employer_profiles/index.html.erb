<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="row landing-row">
    <div class="col-md-8 col-sm-8 col-xs-12 col-gn-top">
      <div class="head-title head">
        <span>Employers</span>
        <div class="cleafix"></div>
      </div>
      
      <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 search-wp">
          <%= render 'shared/search', url: employers_employer_profiles_path, q: @q, placeholder: 'Name' %>
        </div>
        <%= link_to "New Employer Profile", new_employers_employer_profile_path, class: "btn btn-default btn-blue-save pull-right new_emp_button" %>
      </div>
      
      <div class="table-responsive">
        <table class="table table-wrapper" style="opacity: 1;">
          <thead>
          <tr>
            <th>Name</th>
            <th>Rostered EE Ct</th>
            <th>Broker Agency</th>
          </tr>
        </thead>
        <tbody>
          <% @employer_profiles.each do |er| %>
            <tr>
              <td><%= link_to er.legal_name, employers_employer_profile_path(er) %></td>
              <td><%= er.roster_size %></td>
              <td><%= er.broker_agency_profile.try(:legal_name) %></td>
            </tr>
          <% end %>
        </tbody>
        </table>
      </div>
      <div class="cleafix"></div>
    </div>
    <div class="cleafix"></div>
  </div>
</div>
<div class="clearfix"></div>

