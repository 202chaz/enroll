<style>
 #effective_datatable_wrapper .employer_attestation_fields .selectric-wrapper{
    width: 25em;
  }

  #effective_datatable_wrapper .employer_attestation_fields .selectric{
    border: solid 1px #b7b7b7;
    border-radius: 4px;
  }


</style>

<div class="row">
  <div class="col-md-offset-1 col-md-10">
    <div class="panel panel-default">
      <div class="panel-body">

        <p id="print_<%=@document.id%>">
          <iframe src="<%= employers_employer_attestation_authorized_download_path(@document.id) + "?id=#{@employer_profile.id}&content_type=#{@document.format}&filename=#{@document.title.gsub(/[^0-9a-z]/i,'')}&disposition=inline" %>" style="border: 0" width="100%" height="500" frameborder="0" scrolling="no"></iframe>
        </p>
        <p style="text-align: right">
          <a href="<%=download_employer_document_document_path(@document) + "?path=#{@document.identifier}"%>"><button class="btn btn-default"><span class="glyphicons glyphicons-cloud-download"></span> Download</button></a>
          <button class="btn btn-default" onclick='printDoc("<%=@document.id%>")'>Print</button>
        </p>
        <hr/>

        <div class="employer_attestation_fields row">
          <div class="col-md-offset-1 col-md-10 panel panel-default">
            <div class="panel-body">

            <%= form_tag employers_employer_attestation_path(@employer_profile), :method => :put do |f| %>
              <%= hidden_field_tag :employer_attestation_id, @document.id %>
             
              <div class='row'>
                <div class="col-sm-8">
                  <div class="form-group">
                    <label><h4>Employer Name: <%= @employer_profile.legal_name %></h4></label>
                  </div>
                </div>
                <div class="col-sm-4">
                  <div class="form-group">
                    <label><h4>Effective Date: <%= TimeKeeper.date_of_record.next_month.strftime('%m/%d/%Y') %></h4></label>
                  </div>
                </div>
              </div>

              <div class="form-group" style="margin-bottom: 2em;">
                <label>Document Name: <%= @document.title %></label>
              </div><br>

              <div class='row'>
                <div class="col-sm-2">
                  <fieldset class="form-group">
                    <div class="form-check">
                      <label class="form-check-label">
                        <input type="radio" name="status" value="accepted" checked>
                        Approve
                      </label>
                    </div>
                    <div class="form-check">
                      <label class="form-check-label">
                        <input type="radio" name="status" value="rejected">
                        Reject
                      </label>
                    </div>
                  </fieldset>
                </div>

                <div class="col-sm-6">
                  <div class="form-group" style="margin-bottom: 1em;">
                    <select class="form-control selectpicker" name="reason_for_rejection" style="border: 1px;">
                      <option value="nil">Reason for rejection</option>
                      <option value="A">Unable To Open Document</option>
                      <option value="B">Document Not Required DOR-1 Form</option>
                      <option value="C">DOR-1 Form DoesNot Match Bussiness</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <input type="text" name="other_reason" placeholder="Other reason for rejection" class="form-control">
                  </div>
                </div>

                <div class="col-sm-4">
                  <div class="form-group">
                    <button type="submit" class="btn <%= @document.may_accept? ? 'btn-primary' : 'disabled' %>">Submit</button>
                    <button type="button" class="btn <%= @document.may_accept? ? 'btn-primary' : 'disabled' %>" data-dismiss="modal">Cancel</button>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>