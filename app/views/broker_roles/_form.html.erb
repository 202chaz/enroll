<div id="broker_registration_panel">


<div class="container top-pd">
  <%= form_for @person, as: :person, url: new_broker_role_path, remote: true, method: :get do |f| %>
  <%= render 'shared/error_messages', :object => @person %>
  
     <div class="row no-buffer">
        <h4>Please select your role </h4>
        <div class="col-lg-6 col-md-9 col-xs-12 form-group form-group-lg pd">
         <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 form-group form-group-lg no-pd">
              <%= f.radio_button :application_type, "broker", checked: true, class: "required floatlabel", id: 'radio_broker', required: true %>
              <%= f.label :application_type, "BROKER" %>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 form-group form-group-lg no-pd">
              <%= f.radio_button :application_type, "staff", class: "required floatlabel", id: 'radio_staff', required: true %>
              <%= f.label :application_type, "BROKER AGENCY STAFF" %>
            </div>
          </div>
        </div>
      </div>

      <div id="broker_agency_type" class="row no-buffer">
        <h4>Please choose broker agency type </h4>
        <div class="col-lg-6 col-md-9 col-xs-12 form-group form-group-lg pd">
         <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 form-group form-group-lg no-pd">
            <%= f.radio_button :broker_agency_type, "existing_agency", checked: true, class: "required floatlabel", id: 'radio_existing_agency', required: true %>
            <%= f.label :broker_agency_type, "EXISTING BROKER AGENCY" %>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 form-group form-group-lg no-pd">
            <%= f.radio_button :broker_agency_type, "new_agency", class: "required floatlabel", id: 'radio_new_agency', required: true %>
            <%= f.label :broker_agency_type, "NEW BROKER AGENCY" %>
          </div>
        </div>
      </div>
    </div>
<% end %>

    <div id="existing_broker_agency_form">
      <%= render 'existing_broker_agency_form' %>
    </div>
    <div id="new_broker_agency_form" style="display: none;">
      <%= render 'new_broker_agency_form' %>
    </div>

