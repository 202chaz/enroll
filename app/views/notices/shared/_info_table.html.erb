  <div style="display:block; page-break-inside: avoid;">
    <table align="center" cellpadding="5" class="total_table here" style="margin-top: 5px; width: <%= table_width if defined? table_width %>;" border="1">
      <tbody>
        <% rows.each do |row| %>
        <tr>
          <% row.size.times do |i| %>
            <td style="<%= col_styles[i] if defined? col_styles %>">
              <% if row[i].instance_of? Array %>
                <% row[i].size.times do |j| %>
                  <p><%= row[i][j] %></p>
                <%end%>
              <% else %>
                <%= row[i] %>
              <% end %>
            </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <style type="text/css">
    table.here, tr,td {
      border-width: 1px;
    }
  </style>