  <div style="display:block; page-break-inside: avoid;">
    <table align="center" class="total_table household_member_details reports_table" style="width: <%= table_width %>;" border="1">
      <tbody>
        <tr colspan="2" style="text-align:left; background-color:rgb(198,217,241); padding:0 10px;">
          <% headers.size.times do |i| %>
          <td style="width: <%= widths[i] %>;"><%= headers[i]%></td>
          <% end %>
        </tr>
        <% rows.each do |row| %>
        <tr>
          <% row.size.times do |i| %>
            <td><%= row[i] %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

