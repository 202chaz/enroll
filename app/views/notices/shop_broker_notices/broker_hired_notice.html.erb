<%= render partial: 'notices/shared/cover_page', :locals => {notice: notice} %>
<%= render partial: 'notices/shared/logo_and_address_shop' %>
<%= render partial: "notices/shared/shop_address", :locals => {notice: notice} %>
<%= render partial: "notices/shared/date", :locals => {notice: notice} %>

<%= render partial: 'notices/shared/paragraph', :locals =>
  { content: "SUBJECT: YOU HAVE BEEN HIRED AS A BROKER" } %>

<table class="total_table" border="0">
  <tbody>
    <tr>
      <td class="notice-font"><br>Dear <%= notice.broker.full_name%>,</td>
    </tr>
  </tbody>
</table>
<%= render partial: 'notices/shared/paragraph', :locals =>
  { content: "Congratulations! You have been selected as the broker for <strong>#{notice.employer_name }</strong> as of #{notice.broker.assignment_date}, with #{notice.broker_agency} as the assigned agency. The primary contact at <strong>#{notice.employer_name}</strong> is #{notice.employer.employer_first_name} #{notice.employer.employer_last_name}."} %>

<%= render partial: 'notices/shared/paragraph', :locals =>
  { content: "Please remember that as a registered broker with #{Settings.site.short_name}, you are agreeing to the #{Settings.site.short_name} Statement of Producer Attestations when logging into <a href=#{Settings.site.home_url}>#{Settings.site.website_name}</a> "} %>

<%= render partial: 'notices/shared/paragraph', :locals =>
  { content: "If you need resources in assisting your new client, please look to <a href='www.DCHealthLink.com'>www.DCHealthLink.com</a>"} %>

<%= render partial: 'notices/shared/paragraph_with_headers', :locals =>
  { contents: [""], heading: 'For Questions or Assistance:', sub_heading: ''} %>

<%= render partial: 'notices/shared/paragraph', locals: {
 content: "Please contact #{Settings.site.short_name} with any questions:"} %>

<%= render partial: 'notices/shared/unordered_list', :locals => { listings:
  ["By calling #{notice.hbe.phone}.",
    "TTY: 711",
    "Online at <a href=#{Settings.site.home_url}>#{Settings.site.website_name}</a>"]} %>

