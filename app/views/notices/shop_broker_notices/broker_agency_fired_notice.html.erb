<%= render partial: 'notices/shared/cover_page', :locals => {notice: notice} %>
<%= render partial: 'notices/shared/logo_and_address_shop' %>
<%= render partial: "notices/shared/shop_address", :locals => {notice: notice} %>
<%= render partial: "notices/shared/date", :locals => {notice: notice} %>

<table class="total_table" border="0">
  <tbody>
    <tr>
      <td style="padding-top: 10px"><strong><%= notice.employer_name.legal_name.upcase %> HAS REMOVED YOU AS THEIR BROKER</strong></td>
    </tr>
  </tbody>
</table>

<table class="total_table" border="0">
  <tbody>
    <tr>
      <td style="padding-top: 10px">Dear <strong><%= notice.broker_agency_profile.legal_name %><strong>,</td>
    </tr>
  </tbody>
</table>

<%= render partial: 'notices/shared/paragraph', :locals => 
	{ content: "This notice is to inform you that <strong>#{notice.first_name.titleize} #{notice.last_name.titleize }</strong> is no longer the broker of record for <strong>#{notice.employer_profile.legal_name}</strong> as of <strong>#{notice.terminated_broker_account.end_on.to_date}</strong>. You will no longer be authorized to access <strong>#{notice.employer_profile.legal_name}</strong>'s #{Settings.site.short_name} Account or take action on behalf of #{notice.employer_profile.legal_name} or any employees of <strong>#{notice.employer_profile.legal_name}</strong>."} %>
<br>

<%= render partial: 'notices/shared/paragraph_with_headers', :locals =>
    { contents: ["Please contact <a href=#{Settings.site.home_url}>#{Settings.site.short_name}</a> with any questions:"], heading: 'For Questions or Assistance:', sub_heading: ''} %>

<%= render partial: 'notices/shared/unordered_list', :locals => { listings:
	["By calling #{notice.hbe.phone}",
	"TTY: #{Settings.contact_center.tty}",
	"Online at <a href=#{Settings.site.home_url}> #{Settings.site.website_name}</a>"] } %>