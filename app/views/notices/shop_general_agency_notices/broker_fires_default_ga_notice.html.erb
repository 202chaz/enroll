<%= render partial: 'notices/shared/cover_page', :locals => {notice: notice} %>
<%= render partial: 'notices/shared/logo_and_address_shop' %>
<%= render partial: "notices/shared/shop_address", :locals => {notice: notice} %>
<%= render partial: "notices/shared/date", :locals => {notice: notice} %>

<table class="total_table" border="0">
  <tbody>
    <tr>
      <td style="padding-top: 10px"><strong>Email notification sent to:</strong> <%= notice.email %></h3></td>
    </tr>
  </tbody>
</table>

<%= render partial: "notices/shared/date", :locals => {notice: notice} %>

<table class="total_table" border="0">
  <tbody>
    <tr>
      <td style="padding-top: 10px"><strong><%= notice.general_agency.broker_fullname.upcase %> HAS REMOVED YOU AS THEIR DEFAULT GENERAL AGENCY</strong></td>
    </tr>
  </tbody>
</table>

<table class="total_table" border="0">
  <tbody>
    <tr>
      <td style="padding-top: 10px">Dear <%= notice.primary_fullname %>,</td>
    </tr>
  </tbody>
</table>

<%= render partial: 'notices/shared/paragraph', locals: {
 content: "This notice is to inform you that #{notice.primary_fullname} has been removed as the default general agency for #{notice.general_agency.broker_fullname} as of #{TimeKeeper.date_of_record}.  You will no longer be authorized to access #{notice.general_agency.broker_fullname}’s #{Settings.site.short_name} Account or take action on behalf of any clients of #{notice.general_agency.broker_fullname}. If you were assigned as the General Agency for any clients of #{notice.general_agency.broker_fullname}, you will receive a separate notification specific to those groups"} %>

<%= render partial: 'notices/shared/paragraph_with_headers', :locals =>
  { contents: [""], heading: 'For Questions or Assistance:', sub_heading: ''} %>

<%= render partial: 'notices/shared/paragraph', locals: {
 content: "Please contact #{Settings.site.short_name} with any questions:"} %>

<%= render partial: 'notices/shared/unordered_list', :locals => { listings:
  ["By calling #{notice.hbe.phone}.",
    "TTY: #{Settings.contact_center.tty}",
    "Online at <a href=#{Settings.site.home_url}>#{Settings.site.website_name}</a>"]} %>
