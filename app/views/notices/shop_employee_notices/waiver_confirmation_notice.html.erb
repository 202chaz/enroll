<%= render partial: 'notices/shared/cover_page', :locals => {notice: notice} %>
<%= render partial: 'notices/shared/logo_and_address_shop' %>
<%= render partial: 'notices/shared/shop_address', :locals => {notice: notice} %>
<%= render partial: 'notices/shared/date', :locals => {notice: notice} %>

<table class="total_table" border="0">
  <tbody>
    <tr>
      <td style="padding-top: 10px"><strong>Confirmation of Election to Waive Coverage</strong></td>
    </tr>
  </tbody>
</table>

<table class="total_table" border="0">
  <tbody>
    <tr>
      <td style="padding-top: 10px">Dear <%= notice.primary_fullname %>, </td>
    </tr>
  </tbody>
</table>

<%= render partial: 'notices/shared/paragraph', :locals =>
  { content: "This notice confirms your election to waive your right to enroll in employer-sponsored insurance with <strong>#{notice.employer_name}</strong>. Beginning on <strong>#{notice.enrollment.effective_on}</strong>, you will not have insurance with <strong>#{notice.employer_name}</strong>." }%>

<%= render partial: 'notices/shared/paragraph', :locals =>
  { content: "Your coverage into <strong>#{notice.plan.plan_name}</strong> for you and <strong>#{notice.term_enrollment.enrollees_count}</strong> dependents will end on <strong>#{notice.term_enrollment.terminated_on}</strong>." } if notice.term_enrollment.present? %>

<%= render partial: 'notices/shared/paragraph', :locals =>
  { content: "If you experience a qualifying event at a later date, you may be eligible to apply for a special enrollment period (SEP) and enroll in employer-sponsored health insurance outside of open enrollment. Please visit the <a href=https://dchealthlink.com/forms#en|employees>Forms</a> section on <a href=#{Settings.site.home_url}>#{Settings.site.website_name}</a> for additional resources and assistance on reporting qualifying events." }%>

<%= render partial: 'notices/shared/paragraph_with_headers', :locals =>
  { contents: [""], heading: 'For Questions or Assistance:', sub_heading: ''} %>

<%= render partial: 'notices/shared/paragraph', locals: 
  { content: "Please contact your broker for further assistance. You can also contact #{Settings.site.short_name} with any questions:"} %>

<%= render partial: 'notices/shared/unordered_list', :locals => { listings:
  ["By calling #{notice.hbe.phone}",
    "TTY: #{Settings.contact_center.tty}",
    "Online at <a href=#{Settings.site.home_url}>#{Settings.site.website_name}</a>"]} %>

<% if notice.broker.present? %>
  <%= render partial: 'notices/shared/broker_contact_info', :locals => {broker: notice.broker} %>
<% else %>
  <%= render partial: 'notices/shared/paragraph', :locals => {
   content: "If you do not currently have a broker, you can reach out to one of our many trained experts by clicking on the “Find a Broker” link in your employer account or calling #{notice.hbe.phone}."} %>
<% end %>
