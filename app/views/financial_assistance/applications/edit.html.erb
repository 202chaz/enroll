<div class="col-md-7">
	<div class="row">
    <div class="col-md-6">
      <h3 class="title-inline"><b>Financial Assistance Application</b></h3>
    </div>
	</div>
	<table class="table table-sm">
		<tr>
			<td><h4><b>ID #</b> <%=@application.id%></h4></td>
			<td><h4><b>Status:</b> <%=@application.aasm_state%></h4></td>
		</tr>
	</table>

    <h4><b>Primary Applicant</b></h4>
    <%= render 'fa_table', members: [@family.primary_applicant] %>

    <%if @family.dependents.present?%>
      <h4><b>Household Members</b></h4>
      <%= render 'fa_table', members: @family.dependents %>
    <%end%>

	<div class="small">
		<h3>Next Step : Add Household Members </h3>
		<p>You must include all members of your household in the application, even if they're not enrolling in coverage.</p>
		<i class="fa fa-question-circle"><small><a href="" data-toggle="modal" data-target="#help-me-decide"> Help me decide who is in my household</a></small></i>
		<br /> <br />
		<div> <%= link_to "Add a Household Member", insured_family_members_path(source: 'fa_application_edit_add_member'), class: "btn btn-small btn-default", :method => :get %></div>
	</div>
	<div>
		<h4>OR</h4>
	</div>
	<div class="small">
		<h3>Review and Continue</h3>
		<p>If you have added everyone in your household, continue below:</p>
		<div> <%= button_to "Review and Continue", review_and_submit_financial_assistance_application_path, :id => "", :class => "btn btn-success", :method => :get, disabled: !@application.ready_for_attestation?%></div>
	</div>
</div>

<div class="col-md-2">
  <% if @application.incomplete_applicants? %>
    <%= link_to go_to_step_financial_assistance_application_applicant_path(@application, @application.next_incomplete_applicant, 1) do %>
      <div id="btn-continue" class="button btn btn-lg btn-primary">CONTINUE</div>
    <% end %>
  <% else %>
    <%= link_to review_and_submit_financial_assistance_application_path(@application) do %>
      <div id="btn-continue" class="button btn btn-lg btn-primary">CONTINUE</div>
    <% end %>
  <% end %>
</div>

<!-- Modal -->
<div id="help-me-decide" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Help me decide who is in my household</h4>
      </div>
      <div class="modal-body">
        <p>Add More info here...</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
