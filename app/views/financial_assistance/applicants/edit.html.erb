<div class="container bottom-pd">
	<div class="row">
		<h3 class="title-inline"><b>Edit Applicant</b></h3>
	</div>
	<h4>Tax Info, Incomes, Benefits and Deductions for <b><%= @applicant.person.full_name %></b></h4> 
  <div class="row input-no-pd">
</div>


<%= link_to "Edit Tax Information", go_to_step_financial_assistance_application_applicant_path(@application, @applicant, 1) %>
<br />

<div>
	<% if @applicant.incomes.present? %>
		<h4>Edit Existing Income(s)</h4>
		<table class="table">
			<th>Income Type</th>
			<th></th>
			<% @applicant.incomes.each do |income| %>
			<tr>
				<td><%=income.kind%></td>
				<td><%= link_to "Edit", go_to_step_financial_assistance_application_applicant_income_path(@application, @applicant, income, 1) %></td>
			</tr>
			<% end %>
		</table>
	<%end%>
</ div>
<%= link_to "Add Income", new_financial_assistance_application_applicant_income_path(@application, @applicant) %><br>

<hr />

<div>
	<% if @applicant.benefits.present? %>
		<h4>Edit Existing Benefit(s)</h4>
		<table class="table">
			<th>Income Type</th>
			<th></th>
			<% @applicant.benefits.each do |benefit| %>
			<tr>
				<td><%=benefit.kind%></td>
				<td><%= link_to "Edit", go_to_step_financial_assistance_application_applicant_benefit_path(@application, @applicant, benefit, 1) %></td>
			</tr>
			<% end %>
		</table>
	<%end%>
</ div>
<%= link_to "Add Benefit", new_financial_assistance_application_applicant_benefit_path(@application, @applicant) %><br>
<hr />
<%= link_to "Add Deduction", new_financial_assistance_application_applicant_deduction_path(@application, @applicant) %>
<br> <br>
<hr />

<%= link_to "BACK TO ALL HOUSEHOLD MEMBERS", edit_financial_assistance_application_path(@application) %> (Go back and work on another person.)