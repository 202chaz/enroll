<% content_for :horizontal_status do %>
  <%= render :partial =>  'insured/families/horizontal_status.html.erb', locals: {step: 1} %>
<% end %>
<%= form_tag(insured_interactive_identity_verification_path(id: @transaction_id), :enctype =>"multipart/form-data", html: { multipart: true }, method: :put) do %>
    <div class="container">
        <div id="new_person_wrapper">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                    <%#= render :partial => 'shared/left_nav.html.erb' %>
                </div>

                <input type='hidden' name='exit_after_method' value='false' id='exit_after_method'>
                  <div class="col-lg-7 col-md-7 col-sm-8 col-xs-12 bottom-pd">
                    <h1 class="darkblue">Application Checklist</h1>
                    <p>To see if you qualified for Medicaid, tax credits, or cost-sharing reductions, you must select 'Yes'<br/>When you've finished,select CONTINUE.</p>
                    <p class="memo">* = required field</p>
                    <div class="well knowmore rounded-top"> 
                      <div class="row">
                        <div class="col-lg-3 stacked-icons text-center">
                          <i class="fa fa-arrow-down fa-3x adjustments" aria-hidden="true"></i>
                          <br>
                          <span class="fa-stack fa-4x">                                    
                            <i class="fa fa-folder-o fa-stack-2x" aria-hidden="true"></i>
                            <i class="fa fa-info-circle fa-stack-1x adjustments" aria-hidden="true"></i>                                        
                          </span>                                  
                        </div>
                        <div class="col-lg-9">
                          <div>
                            <h4>For Each Person in your Household</h4>
                            <div>You'll need detailed information on each person in your household(even if they don't need coverage) to complete the application. This includes details like date of birth, income, other health insurance available.
                            </div> <br> 
                             <div>
                                If you gather the information un advance, you can complete the application quickly.
                             </div> <br> 
                             <div>
                                View the Complete Application Checklist
                             </div>
                          </div>                                
                        </div>
                      </div>                     
                    </div>
                  </div>
                  <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <%= render  partial: 'shared/individual_progress', locals: {step: '1'} %>
                    <%= render partial: 'shared/help_me_sign_up' %>
                  </div>
            </div>
        </div>
        <%= render partial: 'insured/plan_shoppings/help_with_plan'  %>
    </div>
<% end %>