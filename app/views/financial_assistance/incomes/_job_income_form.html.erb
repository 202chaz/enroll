<%= income_form_for @application, @applicant, income do |f| %>
  <!--- TODO: Hidden field tag needed here for income type of job --->
  <div class="focus_effect_module">
    <div class="row row-form-wrapper no-buffer row-height">
      <div class="col-md-12">
        <%= f.text_field :employer_name, placeholder: 'EMPLOYER NAME *', required: true, class: "floatlabel" %>
      </div>
    </div>

    <div class="row row-form-wrapper no-buffer row-height">
      <div class="col-md-3">
        <%= f.text_field :amount, placeholder: 'AMOUNT *', required: true, class: "floatlabel" %>
      </div>
      <div class="col-md-3">
        <%= f.label :frequency_kind, 'How Often *' %>
        <%= f.select :frequency_kind, options_for_select(frequency_kind_options, selected: income.frequency_kind), required: true %>
      </div>
      <div class="col-md-3">
        <%= datepicker_control f, :start_on, placeholder: 'FROM *', required: true, class: "floatlabel" %>
      </div>
      <div class="col-md-3">
        <%= datepicker_control f, :end_on, placeholder: 'TO', required: true, class: "floatlabel" %>
      </div>
    </div>

    <%= f.fields_for :employer_address do |income_fields| %>
      <div class="row row-form-wrapper no-buffer row-height">
        <div class="col-md-6">
          <%= income_fields.text_field :address_1, placeholder: 'EMPLOYER ADDRESS LINE 1 *', value: income.employer_address.try(:address_1), required: true, class: "floatlabel" %>
        </div>
        <div class="col-md-6">
          <%= income_fields.text_field :address_2, placeholder: 'EMPLOYER ADDRESS LINE 2', value: income.employer_address.try(:address_2), class: "floatlabel" %>
        </div>
      </div>
      <div class="row row-form-wrapper no-buffer row-height">
        <div class="col-md-4">
          <%= income_fields.text_field :city, placeholder: 'CITY *', required: true, value: income.employer_address.try(:city), class: "floatlabel" %>
        </div>
        <div class="col-md-4">
          <%= income_fields.label :state, 'State *' %>
          <%= income_fields.select :state, options_for_select(state_options, selected: income.employer_address.try(:state)), required: true %>
        </div>
        <div class="col-md-4">
          <%= income_fields.text_field :zip, placeholder: 'ZIP *', required: true, value: income.employer_address.try(:zip), class: "floatlabel" %>
        </div>
      </div>
    <% end %>

    <%= f.fields_for :employer_phone do |phone_fields| %>
      <div class="row row-form-wrapper no-buffer row-height">
        <div class="col-md-12">
          <%= phone_fields.text_field :full_phone_number, placeholder: 'PHONE NUMBER *', required: true, value: income.employer_phone.try(:full_phone_number), class: "floatlabel" %>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-3 pull-right cancel-save-mt">
        <a class="btn btn-default income-cancel">Cancel</a>
        <%= f.submit 'Save', class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
<% end %>
