<div class="container-fluid no-pd-left">
	<div class="panel panel-default">
		<div class="panel-body left" id="select-plan-container">
			<div class="col-md-10 col-sm-12">
				<div class="col-md-10 col-sm-9 col-xs-12 no-pd">
					<div class="row select-plan">
						<div class="col-md-12 col-md-sm-12 col-xs-12">
							<p class="information row">Select a Plan.</p>
							<p class="detail">
							<span>Selecting a plan can feel tricky.</span> 
							If you need help don't be afraid to ask for help. You can reach DCHBX support at 555-555-5555 ext 1. Click continue to see the covergae options your employer has available.
							</p>
							<a id="select-plan-btn1" class="text-center btn btn-save">Continue</a>
						</div>

						<div class="col-md-12 col-sm-12 col-xs-12 select-plan-details">
							<section>
							<div role="tabpanel">


								<ul class="nav nav-tabs" role="tablist">
									<li role="presentation" class="active"><a href="#all-plans" aria-controls="all-plans" role="tab" data-toggle="tab">All Plans</a></li>
									<li role="presentation"><a href="#hmo-plans" aria-controls="hmo-plans" role="tab" data-toggle="tab">HMO Plans</a></li>
									<li role="presentation"><a href="#ppo-plans" aria-controls="ppo-plans" role="tab" data-toggle="tab">PPO Plans</a></li>
									<li role="presentation"><a href="#pos-plans" aria-controls="pos-plans" role="tab" data-toggle="tab">POS Plans</a></li>
									<li class="pull-right all-filter" role="presentation"><a href="#" role="tab" data-toggle="tab">All Filters</a></li>
								</ul>

								<%= render "plan_shopping/plan_filters" %>

								<!-- Tab panes -->
								<div class="tab-content">
									<div role="tabpanel" class="tab-pane active" id="all-plans">
										<% @plans.each do |plan| %>
											<%= render "plan_shopping/plan_details", :plan => plan %>
										<% end %>
									</div>

									<div role="tabpanel" class="tab-pane active" id="hmo-plans">
										<% @plans.select { |pl| pl.plan_type && (pl.plan_type.downcase == "hmo") }.each do |plan| %>
											<%= render "plan_shopping/plan_details", :plan => plan %>
										<% end %>
									</div>

									<div role="tabpanel" class="tab-pane active" id="ppo-plans">
										<% @plans.select { |pl| pl.plan_type && (pl.plan_type.downcase == "ppo") }.each do |plan| %>
											<%= render "plan_shopping/plan_details", :plan => plan %>
										<% end %>
									</div>

									<div role="tabpanel" class="tab-pane active" id="pos-plans">
										<% @plans.select { |pl| pl.plan_type && (pl.plan_type.downcase == "pos") }.each do |plan| %>
											<%= render "plan_shopping/plan_details", :plan => plan %>
										<% end %>
									</div>
								</div>
							</div>
							</section>
						</div>
					</div>
				</div>
				<div class="col-md-2 col-sm-3 col-xs-12 key no-pd-right" id="key-section">
					<%= submit_tag "Save & Exit", class: 'btn btn-save' %>
					<%= render 'shared/signup_progress' %>
				</div>
			</div>
		</div>
	</div>
</div>
